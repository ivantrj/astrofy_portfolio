---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Flutter</div>
  </div>

  <HorizontalCard
    title="Workout App"
    img="/post_img.webp"
    desc="A workout app made with Flutter."
    url="https://github.com/ivantrj/flutter_workout_app"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">SwiftUI</div>
  </div>

  <HorizontalCard
    title="Bookworm"
    img="/post_img.webp"
    desc="Reading app made with SwiftUI.."
    url="https://github.com/ivantrj/Bookworm"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Movie Database"
    img="/post_img.webp"
    desc="Movie Database Appw made with SwiftUI."
    url="https://github.com/ivantrj/MovieDatabase_SwiftUI"
  />
</BaseLayout>
